#!/bin/bash

# Defining the help page 
function help_page(){
echo -e "Description:"
echo -e "  Uses Payload generated by Burp Collaborator as an input to generates a customized Blind OS command injection payload list and copy it to the clipboard."
echo -e ""
echo -e "Usage:"
echo -e "  blindOS [flags]"
echo -e ""
echo -e "Flags:"
echo -e "  -d <string> \t\t\t burp collaborator domain (required)"
echo -e "  -o <string> \t\t\t Output the generated payloads to a text file (optional)"
echo -e "  -c          \t\t\t Disable copy to clipboard (defaul Enabled)"
echo -e "  -h          \t\t\t Display help page"
echo -e "  -v          \t\t\t Display the payloads generated (default disable)"
echo -e ""
echo -e ""
exit 1
}

# Getting the options
while getopts :i:d:o:chv options; do
	case $options in
		d)payload="$OPTARG";;
		o)Output=$OPTARG;;
		c)Copy='this is set';;
		h) help_page;;
		v)Verbose="set";;
		\?) echo "Invalid (-${OPTARG}) option";;
		: ) echo -e "Missing argument for -${OPTARG}\n"; help_page; exit 1;;
	esac
done

# checking for -d option present or not 
if [ -z "$payload" ]
then
      echo -e "No domain provided\n"
      help_page

fi

# Main

# Payload list array declaration
payload_array=(
