#Printing the banner 
RED='\033[1;31m'
BLUE='\033[1;34m'
PURPLE='\033[1;35m'
GRAY='\033[1;33m'
NC='\033[0m' # No Color

echo -e "\n  ${BLUE}@@@@@@@   @@@       @@@  @@@  @@@  @@@@@@@   ${RED}    @@@@@@    @@@@@@   ${NC}"
echo -e "  ${BLUE}@@@@@@@@  @@@       @@@  @@@@ @@@  @@@@@@@@  ${RED}   @@@@@@@@  @@@@@@@   ${NC}"
echo -e "  ${BLUE}@@!  @@@  @@!       @@!  @@!@!@@@  @@!  @@@  ${RED}   @@!  @@@  !@@       ${NC}"
echo -e "  ${BLUE}!@   @!@  !@!       !@!  !@!!@!@!  !@!  @!@  ${RED}   !@!  @!@  !@!       ${NC}"
echo -e "  ${BLUE}@!@!@!@   @!!       !!@  @!@ !!@!  @!@  !@!  ${RED}   @!@  !@!  !!@@!!    ${NC}"
echo -e "  ${BLUE}!!!@!!!!  !!!       !!!  !@!  !!!  !@!  !!!  ${RED}   !@!  !!!   !!@!!!   ${NC}"
echo -e "  ${BLUE}!!:  !!!  !!:       !!:  !!:  !!!  !!:  !!!  ${RED}   !!:  !!!       !:!  ${NC}"
echo -e "  ${BLUE}:!:  !:!   :!:      :!:  :!:  !:!  :!:  !:!  ${RED}   :!:  !:!      !:!   ${NC}"
echo -e "  ${BLUE} :: ::::   :: ::::   ::   ::   ::   :::: ::  ${RED}   ::::: ::  :::: ::   ${NC}"
echo -e "  ${BLUE}:: : ::   : :: : :  :    ::    :   :: :  :   ${RED}    : :  :   :: : :    ${NC} \n\n\n"
echo -e "                                                                ${PURPLE} Created by Mudassir Alvi ${NC}"
echo -e "                                                                ${PURPLE}        twitter:   ${GRAY}SyedMudassirud2${NC} "
echo -e "                                                                ${PURPLE}        Instagram: ${GRAY}lvomer${NC}"
echo -e "                                                                ${PURPLE}        github:    ${GRAY}mudassiruddin${NC}"

# checking for -o option
if [ -z "$Output" ]
then
        Out_put_file_destination="/tmp/blindOS_payloadlist.txt"
else
        Out_put_file_destination="$Output"
        echo "[+] Text file created"
fi


# removing the  temp file
rm -rf /tmp/blindOS_payloadlist.txt

# Print array values in  lines
for val1 in "${payload_array[@]}" ; do

     echo -e $val1 >> "$Out_put_file_destination"
done

# Copying the file to clip board
if [ -z "$Copy"  ]
then
	cat "$Out_put_file_destination" | xclip -selection primary
	cat "$Out_put_file_destination" | xclip -selection clip
	echo "[+] Payload list copied to clip board"
else
	echo  "[-] Payload list not copied to clipboard "
fi

# Displaying the output
if [ -n "$Verbose" ]
then
      cat "$Out_put_file_destination"
fi

